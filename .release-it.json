{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "npm run lint", "npm run test"],
    "after:bump": "npm run build"
  },
  "github": {
    "release": true
  },
  "npm": {
    "release": true
  }
}

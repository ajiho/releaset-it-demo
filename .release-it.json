{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false,
    "releaseName": "v${version}",
    "assets": ["dist"]
  },
  "hooks": {
    "after:bump": "npm run build",
    "after:git:release": "在 git push 之后、GitHub Release 之前执行",
    "after:release": "成功发布 ${name} v${version} 到 ${repo.repository}"
  }
}
